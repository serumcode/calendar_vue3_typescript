{
  "compilerOptions": {
    "isolatedModules": true,
   
    "noImplicitThis": true,
    "strictNullChecks": true,
    "target":"esnext",
    "module": "ESNext",
    "jsx":"preserve",
    "importHelpers": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "vuex": ["./node_modules/vuex/types/index"]
    },
    "allowSyntheticDefaultImports": true,
   // "types":["vuex"],
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "lib": [ "DOM","es2023"],
    "types": ["vuex"]
  },
  
  "include": [
    "@types/**/*.d.ts",
    "@types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
  
  
}
